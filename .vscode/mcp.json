{
  "inputs": [
    {
      "id": "NVDAPIKey",
      "type": "promptString",
      "description": "API key for accessing the NVD vulnerability database (get one from https://nvd.nist.gov/developers/request-an-api-key).",
      "password": true
    }
  ],
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "nvd": {
      "command": "uvx",
      "args": ["mcp-nvd"],
      "env": {
        "NVD_API_KEY": "${input:NVDAPIKey}"
      }
    }
  }
}
