{
  "name": "evefrontier-lambda-scout-gates",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "crates/evefrontier-lambda-scout-gates/src",
  "tags": ["type:application", "lang:rust", "scope:lambda"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build -p evefrontier-lambda-scout-gates --locked",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "release": {
          "command": "cargo build -p evefrontier-lambda-scout-gates --release --locked"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "cargo test -p evefrontier-lambda-scout-gates --locked",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt -p evefrontier-lambda-scout-gates -- --check",
        "cwd": "{workspaceRoot}"
      }
    },
    "clippy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy -p evefrontier-lambda-scout-gates --all-targets -- -D warnings",
        "cwd": "{workspaceRoot}"
      }
    },
    "complexity": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy -p evefrontier-lambda-scout-gates --all-targets -- -W clippy::cognitive_complexity -W clippy::too_many_lines -W clippy::excessive_nesting -D warnings",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
