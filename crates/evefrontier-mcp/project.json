{
  "name": "evefrontier-mcp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "crates/evefrontier-mcp/src",
  "prefix": "evefrontier",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build -p evefrontier-mcp"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test -p evefrontier-mcp --lib"
      }
    },
    "clippy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy -p evefrontier-mcp --all-targets --all-features -- -D warnings"
      }
    },
    "fmt": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo fmt -p evefrontier-mcp --check"
      }
    }
  }
}
