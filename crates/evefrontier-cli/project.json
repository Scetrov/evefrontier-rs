{
  "name": "evefrontier-cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "crates/evefrontier-cli/src",
  "tags": ["type:application", "lang:rust"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build -p evefrontier-cli",
        "cwd": "{workspaceRoot}"
      },
      "configurations": {
        "release": {
          "command": "cargo build -p evefrontier-cli --release"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test -p evefrontier-cli",
        "cwd": "{workspaceRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cargo fmt -p evefrontier-cli -- --check"
        ],
        "cwd": "{workspaceRoot}",
        "parallel": false
      }
    },
    "clippy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy -p evefrontier-cli --all-targets -- -D warnings",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
